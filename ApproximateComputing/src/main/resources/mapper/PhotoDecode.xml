<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ApproximateComputing.dao.PhotoDecodeDao">
	<resultMap type="com.ApproximateComputing.po.PhotoDecode" id="photoDecodeResultMap">
		<id property="id" column="id"/>
		<result property="qualityLossRatio" column="quality_loss_ratio"/>
		<result property="time" column="time"/>
		<result property="grade" column="grade"/>

	</resultMap>
	
	<sql id="columnList">
		quality_loss_ratio,time,grade
	</sql>
	
	
	<!-- 批量添加高清图片解码评分记录 -->
	<insert id="createMultiPhotoDecode" parameterType="com.ApproximateComputing.po.PhotoDecode" useGeneratedKeys="true" keyProperty="id">
		insert into photodecode
		(<include refid="columnList"/>,add_time)
		values
		<foreach collection="list" item="item" index="index" separator=",">
		(
			#{item.qualityLossRatio},#{item.time},#{item.grade},NOW()
		)
		</foreach>
	</insert>
	
	<select id="getAll" resultMap="photoDecodeResultMap">
		select quality_loss_ratio,time,grade from photodecode
	</select>
	
	<select id="selectAvg" resultType="java.lang.Float">
		SELECT AVG( grade) as grade FROM photodecode 
		WHERE quality_loss_ratio=#{0} AND time=#{1}
	</select>
	
</mapper>